<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/videoMotionLayout"
        android:background="@android:color/white"
        app:motionDebug="SHOW_ALL"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layoutDescription="@xml/fragment_now_playing_scene">

    <View
        android:id="@+id/viewBackground"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toTopOf="@id/viewImageCover"
        app:layout_constraintStart_toStartOf="@id/viewImageCover"
        app:layout_constraintEnd_toEndOf="@id/button"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/viewImageCover"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tsumugi_ssr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/view_content_image" />

    <ImageView
        android:id="@+id/button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@android:drawable/ic_menu_search"
        app:tint="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="@+id/viewImageCover"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.motion.widget.MotionLayout>